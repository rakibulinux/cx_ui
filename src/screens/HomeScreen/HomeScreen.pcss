.home-page {
  align-items: flex-start;
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: center;
  margin-top: calc(var(--gap) * -1.3);
  width: 100vw;
  &__container {
    max-width: 1200px;
    width: 100%;
  }
  &__markets-top-row {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 0 15px;
  }
}
/* -------Market-Feature----------- */
.home-page__market-feature {
  margin: 60px 0 0;
}

